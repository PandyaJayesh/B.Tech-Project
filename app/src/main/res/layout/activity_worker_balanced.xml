<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".WorkerBalancedActivity">

    <EditText
        android:id="@+id/etIPwb"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:autofillHints=""
        android:hint="@string/ip_address"
        android:inputType="text"
        android:text="@string/_192_168_137_208" />

    <EditText
        android:id="@+id/etPortwb"
        android:layout_width="150dp"
        android:layout_height="97dp"
        android:layout_below="@+id/etIPwb"
        android:layout_marginTop="13dp"
        android:autofillHints=""
        android:hint="@string/port_no"
        android:inputType="number"
        android:text="@string/_8080" />

    <Button
        android:id="@+id/btnConnectwb"
        android:layout_width="171dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="337dp"
        android:text="@string/connect_to_server"
        android:translationY="0dp" />

    <TextView
        android:id="@+id/tvMessageswb"
        android:layout_width="357dp"
        android:layout_height="438dp"
        android:translationX="0dp"
        android:translationY="300dp" />

    <Button
        android:id="@+id/btnResetwb"
        android:layout_width="136dp"
        android:layout_height="94dp"
        android:layout_marginTop="200dp"
        android:backgroundTintMode="add"
        android:rotationY="0"
        android:text="@string/reset5"
        android:translationX="195dp"
         />

    <TextView
        android:id="@+id/tvStatuswb"
        android:layout_width="328dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="150dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center" />


</RelativeLayout>

